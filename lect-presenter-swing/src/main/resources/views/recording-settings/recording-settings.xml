<?xml version="1.0" encoding="UTF-8"?>
<Panel layout="GridBagLayout" border="EmptyBorder(20, 20, 20, 20)">
	<CheckBox id="notifyToRecordCheckBox" name="extendedUI" text="recording.settings.notify.to.record">
		<gridbagconstraints gridx="0" gridy="0" gridwidth="2" anchor="GridBagConstraints.WEST" insets="5,0,2,0" />
	</CheckBox>
	<CheckBox id="confirmStopRecordingCheckBox" name="extendedUI" text="recording.settings.confirm.stop.recording">
		<gridbagconstraints gridx="0" gridy="1" gridwidth="2" anchor="GridBagConstraints.WEST" insets="5,0,2,0" />
	</CheckBox>
	<CheckBox id="mixAudioStreamsCheckBox" name="extendedUI" text="recording.settings.mix.audio.streams">
		<gridbagconstraints gridx="0" gridy="2" gridwidth="2" anchor="GridBagConstraints.WEST" insets="5,0,15,0" />
	</CheckBox>
	<Label text="recording.settings.page.record.timeout" name="extendedUI">
		<gridbagconstraints gridx="0" gridy="3" gridwidth="2" anchor="GridBagConstraints.WEST" insets="5,0,2,0" />
	</Label>
	<TextField id="pageTimeoutTextField" name="extendedUI">
		<gridbagconstraints gridx="0" gridy="4" gridwidth="2" anchor="GridBagConstraints.WEST" insets="5,0,15,0" />
		<Filter class="org.lecturestudio.swing.filter.IntFilter" />
	</TextField>
	<Label text="recording.settings.audio.format" name="extendedUI">
		<gridbagconstraints gridx="0" gridy="5" gridwidth="2" anchor="GridBagConstraints.WEST" insets="5,0,2,0" />
	</Label>
	<ComboBox id="recordingFormatCombo" name="extendedUI">
		<gridbagconstraints gridx="0" gridy="6" gridwidth="2" anchor="GridBagConstraints.WEST" insets="5,0,15,0" />
		<renderer class="org.lecturestudio.swing.combobox.AudioFormatRenderer" />
	</ComboBox>
	<Label text="recording.settings.directory">
		<gridbagconstraints gridx="0" gridy="7" gridwidth="2" anchor="GridBagConstraints.WEST" insets="5,0,2,0" />
	</Label>
	<TextField id="recordingPathTextField">
		<gridbagconstraints gridx="0" gridy="8" weightx="1" fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST" insets="5,0,15,0" />
	</TextField>
	<Button id="selectRecPathButton" text="button.browse">
		<gridbagconstraints gridx="1" gridy="8" anchor="GridBagConstraints.WEST" insets="5,5,15,0" />
	</Button>
	<box.vglue>
		<gridbagconstraints gridx="0" gridy="9" weighty="1.0" />
	</box.vglue>
	<HBox gap="5">
		<gridbagconstraints gridx="0" gridy="10" gridwidth="3" weightx="1.0" fill="GridBagConstraints.HORIZONTAL" />
		<box.hglue />
		<Button id="resetButton" text="button.reset"/>
		<Button id="closeButton" text="button.close"/>
	</HBox>
</Panel>